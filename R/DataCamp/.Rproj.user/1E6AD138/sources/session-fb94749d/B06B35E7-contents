#  -----  Matrix. -------

#  ------ Create a matrix 

matrix(1:6, nrow =2)
#       [,1] [,2]  [,3]
# [1,]   1    3     5
# [2,].  2    4     6

matrix(1:6,ncol=3)
#       [,1] [,2] [,3]
# [1,].  1.   3.    5
# [2,]   2.   4.    6

matrix(1:6, nrow = 2, byrow = TRUE)
#       [,1] [,2] [,3]
# [1,].  1    2     3
# [2,]   4    5     6

